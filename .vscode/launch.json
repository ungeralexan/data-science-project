{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Start Application",
            "configurations": [
                "Python: Backend",
                "Node: Frontend"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/project"
            }
        },
        {
            "name": "Python: Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/project/backend",
            "env": {},
            "justMyCode": true
        },
        {
            "name": "Node: Frontend",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev -- --host 0.0.0.0 --port 5173",
            "cwd": "${workspaceFolder}/project/frontend",
            "env": {}
        }
    ]
}